<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
		 version="3.1">
	
	<servlet>
    	<servlet-name>initServlet</servlet-name>
    	<servlet-class>com.benz.portals.web.InitServlet</servlet-class>
    	<load-on-startup>1</load-on-startup>
  	</servlet>
  
    <!-- context-param 参数 begin -->
	<context-param>
    	<param-name>contextConfigLocation</param-name>
    	<param-value>classpath:spring/ApplicationContext.xml</param-value>
  	</context-param>
  	
  	<context-param>
    	<param-name>log4jConfigLocation</param-name>
    	<param-value>classpath:log4j.properties</param-value>
  	</context-param>
  	<!-- context-param 参数 end -->
  	
  	
  	<!-- 日志，spring 加载 begin -->
  	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
  	<listener>
    	<listener-class>
            org.springframework.web.context.ContextLoaderListener
    	</listener-class>
  	</listener>
  	<!-- 日志，spring 加载 end -->
  	
  	<listener>
    	<listener-class>com.benz.portals.web.CmsSessionListener</listener-class>
  	</listener>
  
  	<!-- 过滤出一些基础数据 begin -->
  	<filter>
    	<filter-name>SystemContextFilter</filter-name>
    	<filter-class>com.benz.portals.web.SystemContextFilter</filter-class>
  	</filter>
  	<filter-mapping>
    	<filter-name>SystemContextFilter</filter-name>
    	<url-pattern>/*</url-pattern>
  	</filter-mapping>  	
  	<!-- 过滤出一些基础数据 end -->


  	<!-- springMvc Restful begin -->
  	<servlet>
		<servlet-name>springMvc</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:spring/ApplicationContext-mvc.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>springMvc</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
  	<!-- springMvc Restful end -->
  
  	
  	<session-config>
    	<session-timeout>15</session-timeout>
  	</session-config>
 	<display-name>SHCMS Application</display-name>
 	
</web-app>